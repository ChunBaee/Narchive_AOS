<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Narchive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_b2f0f4_090022</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/kyobohandwriting2019</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/color_b2f0f4_090022</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/bg_narchive_splash</item>
    </style>

    <style name="SeeAllProfileImageTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:statusBarColor">@color/black_white</item>
    </style>

</resources>